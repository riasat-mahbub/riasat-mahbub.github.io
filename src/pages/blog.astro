---
import Layout from "@/layouts/Layout.astro";
import BlogNav from "@/components/blog-nav.astro";
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) => 
  b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

function truncateTitle(title: string, maxLength: number = 50) {
  return title.length > maxLength ? title.substring(0, maxLength) + '...' : title;
}
---

<Layout title="Blog - Riasat Mahbub">
  <BlogNav />
  <main class="min-h-screen bg-white dark:bg-gray-900 pt-20">
    <div class="max-w-6xl mx-auto px-6 py-12">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8">Blog</h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-12">
        My journey through coding challenges and problem-solving insights.
      </p>
      
      {sortedPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sortedPosts.map(post => (
            <a href={`/blog/${post.slug}`} class="group block">
              <div class="bg-gray-50 dark:bg-gray-800 rounded-lg overflow-hidden shadow-md hover:shadow-xl transform hover:scale-105 transition-all duration-300">
                <div class="h-48 bg-gradient-to-br from-purple-500 to-blue-600 flex items-center justify-center">
                  <div class="text-white text-center p-4">
                    <div class="text-2xl font-bold mb-2">LeetCode</div>
                    <div class={`inline-block px-3 py-1 rounded-full text-sm font-medium ${
                      post.data.difficulty === 'Easy' ? 'bg-green-500' :
                      post.data.difficulty === 'Medium' ? 'bg-yellow-500' : 'bg-red-500'
                    }`}>
                      {post.data.difficulty}
                    </div>
                  </div>
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
                    {truncateTitle(post.data.title)}
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">
                    {post.data.description}
                  </p>
                  <div class="flex flex-wrap gap-1 mb-3">
                    {post.data.tags.slice(0, 2).map(tag => (
                      <span class="px-2 py-1 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded text-xs">
                        {tag}
                      </span>
                    ))}
                  </div>
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    {post.data.publishDate.toLocaleDateString()}
                  </p>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400">Coming soon... Currently working on LeetCode solutions!</p>
        </div>
      )}
    </div>
  </main>
</Layout>